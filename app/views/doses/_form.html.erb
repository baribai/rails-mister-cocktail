<%= simple_form_for(@dose) do |f| %>
<% if @dose.errors.any? %>
<div class="errors-container">
      <ul>
        <% @dose.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>


<% end %>



